---
import Layout from "../layouts/Layout.astro";
import HeroSmall from "../components/shared/PageComponents/HeroSmall/HeroSmall.astro";
import Intro from "../components/contact/Intro/Intro.astro";
import ContactInfo from "../components/contact/ContactInfo/ContactInfo.astro";
import RequestQuote from "../components/contact/RequestQuote/RequestQuote.astro";
import Process from "../components/contact/Process/Process.astro";
import Testimonials from "../components/shared/PageComponents/Testimonials/Testimonials.astro";

import { Page_Seo_Query } from "../data/page/queries";
import {
  Hero_Small_Query,
  Contact_Information_Query,
} from "../data/shared/queries";
import {
  Intro_Query,
  Contact_Info_Display_Query,
  Request_Quote_Query,
  Process_Query,
} from "../data/contact/queries";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
		query contactPageQuery {
			page(id: "/contact", idType: URI) {
				${Page_Seo_Query}

        contactPage {
          ${Hero_Small_Query}
          ${Intro_Query}
          ${Contact_Info_Display_Query}
          ${Request_Quote_Query}
          ${Process_Query}
        }
			}

      ${Contact_Information_Query}
		}
	`,
  }),
});

const {
  data: {
    page: { seoMetaTags, contactPage },
    contactInformation,
  },
} = await response.json();
---

<Layout
  metaImg={seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={seoMetaTags.seoMetaInformation.metaDescription}
>
  <HeroSmall data={contactPage.heroSmall} />
  <Intro data={contactPage.intro} />
  {
    contactPage.contactInfoDisplay.displayContactInfo && (
      <ContactInfo data={contactInformation.contactOptions} />
    )
  }
  <RequestQuote data={contactPage.requestQuote} />
  <Process data={contactPage.process} />
  <Testimonials />
</Layout>
