---
import Layout from "../layouts/Layout.astro";
import HeroIntro from "../components/shared/PageComponents/HeroIntro/HeroIntro.astro";
import GalleryComponent from "../components/gallery/GalleryComponent/GalleryComponent.astro";
import Testimonials from "../components/shared/PageComponents/Testimonials/Testimonials.astro";

import { Page_Seo_Query } from "../data/page/queries";
import { Hero_Intro_Query } from "../data/shared/queries";
import { Gallery_Query } from "../data/gallery/queries";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
		query galleryPageQuery {
			page(id: "/gallery", idType: URI) {
				${Page_Seo_Query}

        galleryPage {
          ${Hero_Intro_Query}
          ${Gallery_Query}
        }
			}
		}
	`,
  }),
});

const {
  data: {
    page: { seoMetaTags, galleryPage },
  },
} = await response.json();
---

<Layout
  metaImg={seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={seoMetaTags.seoMetaInformation.metaDescription}
>
  <HeroIntro data={galleryPage.heroIntro} />
  <GalleryComponent data={galleryPage.gallery} />
  <Testimonials />
</Layout>
