---
import Layout from "../layouts/Layout.astro";

import HeroIntro from "../components/shared/PageComponents/HeroIntro/HeroIntro.astro";
import AboutIntro from "../components/home/AboutIntro/AboutIntro.astro";
import ServicesList from "../components/shared/PageComponents/ServicesList/ServicesList.astro";
import Process from "../components/home/Process/Process.astro";
import Collaborate from "../components/home/Collaborate/Collaborate.astro";

import { Page_Seo_Query } from "../data/page/queries";
import { Hero_Intro_Query, Servcies_List_Query } from "../data/shared/queries";
import {
  About_Intro_Query,
  Process_Query,
  Collaborate_Query,
} from "../data/home/queries";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
		query homePageQuery {
			page(id: "/", idType: URI) {
				${Page_Seo_Query}
        homePage {
          ${Hero_Intro_Query}
          ${About_Intro_Query}
          ${Servcies_List_Query}
          ${Process_Query}
          ${Collaborate_Query}
        }
			}
		}
	`,
  }),
});

const {
  data: {
    page: { seoMetaTags, homePage },
  },
} = await response.json();
---

<Layout
  metaImg={seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={seoMetaTags.seoMetaInformation.metaDescription}
>
  <HeroIntro data={homePage.heroIntro} />
  <AboutIntro data={homePage.aboutIntro} />
  <ServicesList data={homePage.servicesList} />
  <Process data={homePage.process} />
  <Collaborate data={homePage.collaborate} />
</Layout>
