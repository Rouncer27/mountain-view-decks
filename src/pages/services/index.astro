---
import Layout from "../../layouts/Layout.astro";
import HeroIntro from "../../components/shared/PageComponents/HeroIntro/HeroIntro.astro";
import Callout from "../../components/services/Callout/Callout.astro";
import ServicesList from "../../components/shared/PageComponents/ServicesList/ServicesList.astro";

import { Page_Seo_Query } from "../../data/page/queries";
import {
  Hero_Intro_Query,
  Servcies_List_Query,
} from "../../data/shared/queries";
import { Callout_Query } from "../../data/services/queries";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
		query servicesPageQuery {
			page(id: "/services", idType: URI) {
				${Page_Seo_Query}

        servicesPage {
          ${Hero_Intro_Query}
          ${Callout_Query}
          ${Servcies_List_Query}
        }
			}
		}
	`,
  }),
});

const {
  data: {
    page: { seoMetaTags, servicesPage },
  },
} = await response.json();
---

<Layout
  metaImg={seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={seoMetaTags.seoMetaInformation.metaDescription}
>
  <HeroIntro data={servicesPage.heroIntro} />
  <Callout data={servicesPage.callout} />
  <ServicesList data={servicesPage.servicesList} />
</Layout>
